{
    "compilerOptions": {
        
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": ["es2017", "dom"],
        "skipLibCheck": true
    },
    "include": [
        "src/*", "src/**/*", "src/main.controller.ts" ]
}